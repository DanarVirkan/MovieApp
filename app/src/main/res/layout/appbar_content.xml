<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:contentDescription="@string/poster"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_release"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/placeholder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/detail_poster"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Release : 23 Sept 2020" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/placeholder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_poster"
        app:layout_constraintTop_toTopOf="@+id/detail_poster"
        tools:text="Hard Kill" />

    <TextView
        android:id="@+id/detail_rating"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/placeholder"
        android:drawablePadding="3dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/star"
        app:layout_constraintEnd_toStartOf="@+id/detail_time"
        app:layout_constraintStart_toStartOf="@+id/detail_title"
        app:layout_constraintTop_toBottomOf="@+id/detail_title"
        tools:text="7.1" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@drawable/placeholder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/detail_rating"
        app:layout_constraintEnd_toEndOf="@+id/detail_title"
        app:layout_constraintStart_toEndOf="@+id/detail_rating"
        app:layout_constraintTop_toTopOf="@+id/detail_rating"
        tools:text="90 min" />

    <TextView
        android:id="@+id/detail_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_rating"
        app:layout_constraintStart_toStartOf="@+id/detail_rating"
        app:layout_constraintTop_toBottomOf="@+id/detail_rating"
        tools:text="Season" />

    <TextView
        android:id="@+id/detail_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_season"
        app:layout_constraintStart_toStartOf="@+id/detail_season"
        app:layout_constraintTop_toBottomOf="@+id/detail_season"
        tools:text="Episodes" />

    <TextView
        android:id="@+id/detail_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/placeholder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detail_poster"
        app:layout_constraintTop_toBottomOf="@+id/detail_rating"
        tools:text="Tagline" />

</androidx.constraintlayout.widget.ConstraintLayout>